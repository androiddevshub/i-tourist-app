<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AdditionalInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Information"
        android:id="@+id/txt_additional_information"
        android:textColor="#452727"
        android:textFontWeight="900"
        android:textSize="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="100dp"/>


    <TextView
        android:layout_below="@id/txt_additional_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certificate"
        android:id="@+id/txt_certificate"
        android:textColor="#9A4088"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_below="@id/txt_certificate"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/custom_border"
        android:id="@+id/upload_certificate"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



    <com.google.android.material.button.MaterialButton
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/upload_certificate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Proceed"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:backgroundTint="#6EC8D8"
        android:id="@+id/btn_upload_certificate"
        android:textAllCaps="false"/>


</RelativeLayout>