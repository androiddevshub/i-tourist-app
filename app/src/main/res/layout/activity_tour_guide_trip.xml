<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:civ_shadow_radius="20dp" />

        <TextView
            android:id="@+id/tv_guide_trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="20dp"
            android:text="Trip Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"
            android:id="@+id/tv_guide_trip_location"
            android:layout_below="@id/tv_guide_trip_name"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_guide_trip_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_guide_trip_location"
            android:layout_marginLeft="20dp"
            android:text="July 20-24"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/single_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_guide_trip_date"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#E1E0E0" />

        <TextView
            android:id="@+id/text_about_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/single_line"
            android:layout_marginLeft="20dp"
            android:text="About Trip"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_guide_trip_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_about_trip"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:text="About Trip Description"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_assign_trip"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/tv_guide_trip_description"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="25dp"
            android:text="Assign to yourself"
            android:visibility="gone"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="#6EC8D8"
            android:layout_marginBottom="20dp"
            app:cornerRadius="20dp" />

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:id="@+id/layout_cancel_assigned_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_guide_trip_description"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_trip"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:text="Cancel trip"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:backgroundTint="#6EC8D8"
                app:cornerRadius="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="In case you're not available"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>
    </RelativeLayout>


</ScrollView>